:go:func(arg) ctx GlobalCtx

include mixins

-
    var _i18n = i18n.GetInstance().Get
    _ = _i18n


doctype 5

html(lang=`${ctx.Lang}`)

    head
        meta(charset='UTF-8')
        meta(name='viewport' content='initial-scale=1.0')
        meta(name='description' content='')
        link(rel='icon' type='image/png' href=`http://static.${ctx.Domain}/favicon.ico`)
        link(rel='stylesheet' href=`http://static.${ctx.Domain}/css/style.css`)
        script(src=`http://static.${ctx.Domain}/js/main.js`)

        title #{ctx.TabTitle}

    body
        header
            div(class='container')
                block header

        div(id='content')

            div(class='container')

                template(id='modalYesCancel')
                    div(class='modal')
                        div( class='modal-content')
                            span(name='message')
                            div(class="row")
                                button( name='ok')
                                button( name='cancel') Annuler

                template(id='notification')
                    div(class='notification')
                        span
                        span &#10539;

                template(id='advice')
                    div(class='advice')

                div(id='notification-group')


                block content

        footer
            div(class='container')
                block footer
